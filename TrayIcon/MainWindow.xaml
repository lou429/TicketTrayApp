<Window x:Class="TrayIcon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrayIcon"
        mc:Ignorable="d"
        xmlns:tb="http://www.hardcodet.net/taskbar" 
        Title="Millennium Tray App" Height="10" Width="10" Visibility="hidden">
    <Window.Resources>

    </Window.Resources>
    <Grid>
        <tb:TaskbarIcon x:Name="TrayIcon" IconSource="images/icon.ico" ToolTipText="Millennium - Create a ticket" MenuActivation="LeftOrRightClick" >
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Create ticket" Click="StartTicketApp"/>
                    <MenuItem Header="Exit" Click="ShutdownApp"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Grid>
</Window>
