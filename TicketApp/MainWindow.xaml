<Window x:Class="TicketApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create a ticket" Height="550" Width="350">
    <Window.Resources>
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontFamily" Value="pack://application:,,,/font/#Montserrat Light"/>
            <Setter Property="Foreground" Value="#FF808080"/>
            <Setter Property="Background" Value="#FFFFFFFF"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Margin" Value="40,50,40,20"/>
            <Setter Property="BorderBrush" Value="#FFE20A16"/>
        </Style>
        <Style x:Key="LabelTitle" TargetType="{x:Type Label}">
            <Setter Property="FontFamily" Value="pack://application:,,,/font/#Montserrat Bold"/>
            <Setter Property="Foreground" Value="#FF4C4C4C"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="BorderBrush" Value="#FF002B71"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style x:Key="SettingsStyle" TargetType="{x:Type Label}">
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
            <Setter Property="FontSize" Value="28px"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="pack://application:,,,/font/#Montserrat Light"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#FF4C4C4C"/>
            <Setter Property="Margin" Value="40,10"/>
        </Style>
    </Window.Resources>
    <Grid xmlns:fa="http://schemas.fontawesome.io/icons/">
        <Grid Name="DefaultInfo" Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="35*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="22*"/>
                <RowDefinition Height="136"/>
            </Grid.RowDefinitions>

            <Image Grid.Row="0" Margin="0,0,0,65" Source="/images/logo.png" Height="110" VerticalAlignment="Bottom" Grid.RowSpan="1" Grid.ColumnSpan="2"/>
            <Label Grid.Row="0" Style="{DynamicResource LabelTitle}" FontSize="24px" Content="Making IT easy" Margin="26,0,26,28.2" VerticalAlignment="Bottom" Height="37" HorizontalAlignment="Stretch"/>
            <Label Grid.Row="1" Content="Heading of the case:" Style="{DynamicResource LabelTitle}"/>
            <TextBox Name="HeaderField" Text="Enter heading..." Grid.Row="1" TabIndex="1" Grid.ColumnSpan="2" Margin="40,49.8,39.6,20.2" GotFocus="Field_OnGotFocus" LostFocus="Field_OnLostFocus"/>
            <Label Grid.Row="2" Style="{DynamicResource LabelTitle}" Content="More info about the issue:"/>
            <TextBox Name="BodyField" Text="Enter body..." Grid.Row="2" TabIndex="2" Grid.ColumnSpan="2" Margin="40,49.8,39.6,19.8" GotFocus="Field_OnGotFocus" LostFocus="Field_OnLostFocus"/>
            <Border Grid.Row="3" CornerRadius="20" Background="#FFFFFFFF" Margin="90,20,90,80" BorderBrush="#FF002B71" BorderThickness="2" MouseEnter="SendButton_OnMouseEnter" MouseLeave="SendButton_OnMouseLeave">
                <Label Name="SendButton" FontSize="18" Cursor="Hand" Content="Send" Foreground="#FF4C4C4C" TabIndex="3" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="pack://application:,,,/font/#Montserrat Bold" MouseDown="SendTicket"/>
            </Border>
            <Image Name="Settingslcon" Grid.Row="3" Margin="70,80,70,20" Cursor="Hand" Source="images/cog.png" Grid.ColumnSpan="2" MouseEnter="Settings_OhMouseEnter" MouseLeave="Settings_OhMouseLeave" MouseDown="Settings_MouseDown"/>
        </Grid>
        <Grid Name="SettingsScreen" Background="#FF4C4C4C" Visibility="Hidden">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.5*"/>
            </Grid.RowDefinitions>
            <Grid Row="0" Background="#FF4C4C4C">
                <Label Name="DeviceNameLabel" Content="Cannot load data" Style="{DynamicResource SettingsStyle}" Margin="0,60">
                    <Label.ToolTip>
                        <ToolTip Background="#C3313131">
                            <StackPanel Width="350">
                                <StackPanel Orientation="Horizontal" Width="350">
                                    <Label Content="Computer name" FontSize="24px" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="pack://application:,,,/font/#Montserrat Regular" Foreground="#FFFFFFFF"/>
                                </StackPanel>
                                <TextBlock Text="This is the name of your computer" VerticalAlignment="Center" FontSize="20px" FontFamily="pack://application:,,,/font/#Montserrat Light" Foreground="#FFFFFFFF"/>
                            </StackPanel>
                        </ToolTip>
                    </Label.ToolTip>
                </Label>
            </Grid>
            <Separator Grid.Row="0" HorizontalAlignment="Left" Height="23" Margin="0" VerticalAlignment="Bottom" Width="394"/>
            <Label Content="Device info" Grid.Row="1" Style="{DynamicResource SettingsStyle}" Cursor="Hand"/>
            <Label Grid.Row="2" Content="Hardware info" Style="{DynamicResource SettingsStyle}" Cursor="Hand"/>
            <Label Grid.Row="3" Content="Settings" Style="{DynamicResource SettingsStyle}" Cursor="Hand"/>
            <Label Grid.Row="4" Content="X" Style="{DynamicResource SettingsStyle}" Cursor="Hand" MouseDown="CloseButton_OnClick"/>
        </Grid>
        <Grid Name="LoadingScreen" Visibility="Hidden" Background="#FF4C4C4C">
            <fa:ImageAwesome Foreground="#FFFFFFFF" Icon="Refresh" Spin="True" Height="64" Width="64" Margin="146,180,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Label Style="{DynamicResource LabelTitle}" Content="Loading data..." Margin="0,275,0,0" Height="30" Foreground="#FFFFFFFF" HorizontalAlignment="Stretch"/>
        </Grid>
    </Grid>
</Window>
